@model RegistrationViewModel

<!-- Hero Start -->
<div class="container-fluid pt-5 bg-primary hero-header mb-5">
    <div class="container pt-5">
        <div class="row g-5 pt-5">
            <div class="col-lg-6 align-self-center text-center text-lg-start mb-lg-5">
                <div class="btn btn-sm border rounded-pill text-white px-3 mb-3 animated slideInRight">text-Reader</div>
                <h1 class="display-4 text-white mb-4 animated slideInRight">Register</h1>
                <p class="text-white mb-4 animated slideInRight">
                    Welcome To Text-Reader You can Register Your Account
                </p>
                <a asp-area="Admin" asp-controller="Account" asp-action="Registration" class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInRight">Register</a>
                <a asp-area="Admin" asp-controller="Account" asp-action="Login" class="btn btn-outline-light py-sm-3 px-sm-5 rounded-pill animated slideInRight">Login</a>
            </div>
            <div class="col-lg-6 align-self-end text-center text-lg-end">
                <img class="img-fluid" src="/assets/img/hero-img.png" alt="">
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Audio Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="about-img">
                    <img class="img-fluid" src="/assets/img/about-img.jpg">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="card">
                    <div class="card-body py-4 px-md-5">
                        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 500px;">
                            <h2 class="mb-4">Register</h2>
                        </div>
                        <form asp-area="Admin" asp-action="Registration" asp-controller="Account" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="FirstName" type="text" class="form-control" id="firstname" placeholder="Enter First Name">
                                        <label asp-for="FirstName">First Name</label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="LastName" type="text" class="form-control" id="lastname" placeholder="Your Email">
                                        <label asp-for="LastName">Last Name</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Your Name">
                                        <label asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Your Email">
                                        <label asp-for="UserName">UserName</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="PhoneNumber" type="text" class="form-control" id="number" value="+91 " placeholder="Your Email">
                                        <label asp-for="PhoneNumber">Phone Number</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Your Name">
                                        <label asp-for="Password">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmpassword" placeholder="Your Email">
                                        <label asp-for="ConfirmPassword">Confirm Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Audio End-->
